<h1>Listing gifts</h1>

<table>
  <tr>
    <th>Id</th>
        <th>ParentId</th>
    <th>Position</th>
    <th>Name</th>
    <th>Leaf</th>
    <th>Memo</th>
    <th>Uuid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= gift.id %></td>
      <td><%= gift.parent_id %></td>
    <td><%= gift.position %></td>
    <td><%= link_to gift.name,sub_gift_path(gift) %></td>
    <td><%= gift.leaf %></td>
    <td><%= gift.memo %></td>
    <td><%= gift.uuid %></td>
    <td><%= link_to 'Show', admin_gift_path(gift) %></td>
    <td><%= link_to 'Edit', edit_admin_gift_path(gift) %></td>
    <td><%= link_to 'Destroy', admin_gift_path(gift), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

