
<h1>Listing topics</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Kind</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.id %></td>
    <td><%= topic.name %></td>
    <td><%= topic.kind %></td>
    <td><%= link_to 'Show', admin_topic_path(topic) %></td>
    <td><%= link_to 'Edit', edit_admin_topic_path(topic) %></td>
    <td><%= link_to 'Destroy', admin_topic_path(topic), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

