<script>
  
  /* 检测充值金额 */
  function CheckChargeAmout() {
    var A = $("#amount").val();
    
    if(A == '')
    {
      alert('充值金额不能为空');
      return false;
    }
    if(!Tools.isNumber(A) )
    {      
      //$("#amount").val('');
      alert('请输入正确的充值金额');
      return false;
    }else{
      
      var B= Math.round(A * 100) / 100;
      if(B <= 0)
      {
        //$("#amount").val('');
        alert('请输入正确的充值金额');
        return false;
      }else{
        $("#amount").val(B);
      }
      
    }
}
 </script>				
		
	
