<SCRIPT type=text/javascript> 
$(document).ready(function(){ //控制资讯内容中的图片显示大小
var ywidth = 630;
var yheight=0;
var oheight=0;
var owidth=0;
$("#news_box").find("img").each(function(){
owidth=parseInt($(this).width());
oheight=parseInt($(this).height());
if($(this).width()>ywidth){
$(this).width(ywidth);
yheight=parseInt((ywidth*oheight)/owidth);
$(this).height(yheight);
}
});
});
</SCRIPT> 
