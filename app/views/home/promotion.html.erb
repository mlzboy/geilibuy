<script type="text/javascript" charset="utf-8">
$(document).ready(function(){

/* 列表页左侧列表弹出操作事件 */
  $('.list_off').hover(function(){
	  $('.listbox').find('.list_off').removeClass('list_on');
	  $(this).addClass('list_on');
	  $(this).find('.list_pop').show();
	}, function(){
	  $(this).find('.list_pop').hide();
	});
  /* 价格搜索按钮显示 */
  $('.price_zone').focus(function(){
   $('.sel_btn').show();
  });
     /*静态页面调用该函数*/
        setHeadUserStatus();

});
  </script>
<%end%>

