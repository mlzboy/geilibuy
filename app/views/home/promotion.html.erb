<div id="main">






<div class="top_nav">您当前的位置：<a href=".">首页</a> <code>&gt;</code> <span>促俏商品</span></div>

<div id="left">



<div class="listbox">
      <%  Category.top.each do |category|%>
        <div class="list_off">
         <div class="title"><a href="<%=category_url(category.id)%>" title="category.name%>"><%=category.name%></a></div>
             <%if category.children.size>0%>
             <div class="list_pop">
               <div class="pop_ul">
                   <div class="pop_arrow"></div>
                   <%for i in 0...category.children.size%>
                   <p <%=raw 'style="border:none;"' if (category.children.size-1)==i%>><a href="<%=category_url(category.id)%>" title="<%=category.name%>-<%=category.children[i].name%>"><%=category.children[i].name%></a></p>
                   <%end%>
               </div>
             </div>
             <%end%>
       </div>
        <%end%>

</div>




</div>

<%=render 'right'%>
